<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/dogs_item"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:orientation="vertical">

        <!--
            android:src="@drawable/ic_launcher_circle_background"
-->


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_dog"
            android:layout_width="match_parent"
            android:layout_height="239dp"
            android:background="@android:color/holo_blue_dark"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="2sp" />

        <TextView
            android:id="@+id/name_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp">
        </TextView>
        <TextView
            android:id="@+id/origin_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Origin"
            android:textSize="15sp">
        </TextView>

        <TextView
            android:id="@+id/lifespan_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Life_span"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="15sp">
        </TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>